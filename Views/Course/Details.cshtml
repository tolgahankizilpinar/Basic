@model Course


<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.Image" width="200" class="img-fluid rounded">
    </div>
    <div class="col-md-9">

        <a hasp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
            <h5 class="card-title">@Model.Title</h5>
        </a>
        <p class="card-text">@Model.Description</p>
        <div>
            @if (Model.Tags != null)
            {
                @foreach (var item in Model.Tags)
                {
                    <span class="badge bg-primary">@item</span>
                }
            }
        </div>
    </div>
</div>
